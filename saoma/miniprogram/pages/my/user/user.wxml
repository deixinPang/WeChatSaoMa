<view class="main">
    <view class="form-box">
        <form bindsubmit="formSubmit">
            <input value="{{user.name}}" name="name" placeholder="姓名"/>
            <input type="number" name="phone" value="{{user.phone}}" placeholder="电话号码"/>
            <input name="department" value="{{user.department}}" placeholder="部门"/>
            <button form-type="submit">保存</button>
        </form>
    </view>
</view>
